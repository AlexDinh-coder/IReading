<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            android:clickable="true"
            android:focusable="true"
            app:tint="@android:color/black" />



        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_background_login" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="NGHE VÀ ĐỌC NGHÌN NỘI DUNG\nTHUỘC KHO SÁCH HỘI VIÊN"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#777777"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="#F7F7F7"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/buy_12m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/title_12m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IREADING 12 THÁNG"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textDescription1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_12m"
                    android:layout_marginTop="4dp"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:ellipsize="none"
                    android:maxLines="5"
                    android:lineSpacingExtra="2dp"/>

                <TextView
                    android:id="@+id/textPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="329.000 VND"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buy_6m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/title_6m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IREADING 6 THÁNG"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescription2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_6m"
                    android:layout_marginTop="4dp"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:maxLines="3"
                    android:ellipsize="none"
                    android:inputType="textMultiLine"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/textPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="179.000 VND"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Gói 3 tháng -->
            <RelativeLayout
                android:id="@+id/buy_3m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/title_3m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IREADING 3 THÁNG"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescription3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_3m"
                    android:layout_marginTop="4dp"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:maxLines="3"
                    android:ellipsize="none"
                    android:inputType="textMultiLine"
                    android:singleLine="false"/>

                <TextView
                    android:id="@+id/textPrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="99.000 VND"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:text="Lưu ý: Bạn cần đăng nhập mới có thể thanh toán."
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
